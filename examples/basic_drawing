# Basic drawing program for pchip programming language
# Draws the number 1 on the screen, moving it to the right when a key is pressed
{
    let x = 0;
    loop {
        __draw_pos(x, 5);
        __get_font(1);
        __draw(5);
        __key_wait(0);
        __draw(5);
        x = x + 1;
    }
}
